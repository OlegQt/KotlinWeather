<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_city_weather"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/city_item"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/city_hidden_info" />


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/txt_city_temperature_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/btn_update_weather"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_expand"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"
            app:rippleColor="?attr/colorPrimaryVariant"
            android:paddingHorizontal="0dp"
            android:text="@string/btn_expand_card_view" />
    </LinearLayout>





</LinearLayout>

