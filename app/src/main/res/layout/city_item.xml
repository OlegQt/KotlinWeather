<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:backgroundTint="?attr/colorSecondary"
    android:checkable="true"
    app:cardCornerRadius="12dp"
    app:checkedIconGravity="TOP_END"
    app:checkedIconTint="?attr/colorOnSecondary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txt_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <RelativeLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_city_name">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginVertical="2dp" />


            <RelativeLayout
                android:id="@+id/hidden_weather_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_city_temperature_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img_weather"
                    android:layout_alignBottom="@id/img_weather"
                    android:layout_marginStart="4dp"

                    android:text="@string/btn_update_weather"
                    android:textAppearance="?attr/textAppearanceHeadline4" />

                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"

                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/weather_icon"/>
                <TextView
                    android:id="@+id/txt_weather_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_below="@id/img_weather"
                    android:layout_marginTop="2dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcl_forecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/txt_weather_description"/>

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expand"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/btn_expand_card_view"
                android:textColor="?attr/colorOnPrimary"
                app:rippleColor="?attr/colorPrimaryVariant"
                android:layout_below="@id/hidden_weather_info"/>


        </RelativeLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>